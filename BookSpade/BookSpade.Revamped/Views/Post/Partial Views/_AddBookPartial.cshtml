<div class="new-book">
  <form class="form-horizontal">
    <fieldset>
      <!-- Form Name -->
      <legend>Add a New Book</legend>

      <!-- Text input-->
      <div class="control-group">
        <label class="control-label">Book Title</label>
        <div class="controls">
          <input id="bookTitle" name="bookTitle" type="text" placeholder="Financial Accounting with Connect &amp; Lyryx 4th Cdn" class="input-xlarge" required="">

        </div>
      </div>

      <!-- Text input-->
      <div class="control-group">
        <label class="control-label">Course</label>
        <div class="controls">
          <input id="course" name="course" type="text" placeholder="AFM 101" class="input-xlarge" required="">
    
        </div>
      </div>

      <!-- Text input-->
      <div class="control-group">
        <label class="control-label">ISBN</label>
        <div class="controls">
          <input id="isbn" name="isbn" type="text" placeholder="9780070898714" class="input-xlarge" required="">
    
        </div>
      </div>

      <div class="horizontal-line"></div>

      <!-- Text input-->
      <div class="control-group">
        <label class="control-label">Author (optional)</label>
        <div class="controls">
          <input id="author" name="author" type="text" placeholder="Robert Libby, Patricia Libby, Daniel Short, George Kanaan, Maureen Gowing" class="input-xlarge">
    
        </div>
      </div>

      <!-- Text input-->
      <div class="control-group">
        <label class="control-label">Book Image URL (optional)</label>
        <div class="controls">
          <input id="bookImageUrl" name="bookImageUrl" type="text" placeholder="http://ecx.images-amazon.com/images/I/41zG8Om9YaL._SL500_AA300_.jpg" class="input-xlarge">
    
        </div>
      </div>

      <!-- Button -->
      <div class="control-group">
        <label class="control-label"></label>
        <div class="controls">
          <button id="addBookButton" name="addBookButton" class="btn btn-primary">Add This Book</button>
        </div>
      </div>

    </fieldset>
  </form>

</div>